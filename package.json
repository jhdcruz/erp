{
  "private": true,
  "name": "erp",
  "scripts": {
    "dev": "dotenv -- turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "fmt": "prettier --write \"**/*.{js,jsx,ts,tsx,json,yml,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@erp/eslint-config-shared": "workspace:*",
    "@erp/tooling": "workspace:*",
    "dotenv-cli": "7.3.0",
    "eslint": "8.53.0",
    "husky": "8.0.3",
    "lint-staged": "15.1.0",
    "prettier": "3.1.0",
    "rimraf": "5.0.5",
    "turbo": "1.10.16"
  },
  "lint-staged": {
    "*.(md,json,yml)": "prettier --write",
    "*.(js?(x),ts?(x))": [
      "prettier --write",
      "next lint --fix --file"
    ]
  },
  "packageManager": "pnpm@8.10.4"
}
